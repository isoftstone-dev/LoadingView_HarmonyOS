<?xml version="1.0" encoding="utf-8"?>
<com.isoftstone.precentpositionlayout.PrecentPositionLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:id="$+id:layout_main">

    <com.isoftstone.loadingview.LoadingView
        ohos:id="$+id:text_water"
        ohos:height="500"
        ohos:width="500"
        ohos:left_margin="0"
        ohos:top_margin="0"
        />

    <com.isoftstone.loadingview.LoadingView
        ohos:id="$+id:text_ballon"
        ohos:height="500"
        ohos:width="500"
        ohos:left_margin="500"
        ohos:top_margin="0"
        />

    <com.isoftstone.loadingview.LoadingView
        ohos:id="$+id:text_fish"
        ohos:height="500"
        ohos:width="500"
        ohos:left_margin="0"
        ohos:top_margin="500"
        />

    <com.isoftstone.loadingview.LoadingView
        ohos:id="$+id:text_circle"
        ohos:height="500"
        ohos:width="500"
        ohos:left_margin="500"
        ohos:top_margin="500"
        />

</com.isoftstone.precentpositionlayout.PrecentPositionLayout>